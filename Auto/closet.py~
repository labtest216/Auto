#!/usr/bin/python3

from abc import ABC, ABCMeta, abstractmethod
import logging
import json

class Closet(object):

	config_file = open(str(file_name), "r+")
    config_data = json.load(config_file)

	@abstractmethod
	def water_on(self,relay_board,time): pass

	@abstractmethod
	def water_off(self,relay_board): pass

	@abstractmethod
	def led_on(self,relay_board, led_num): pass

	@abstractmethod
	def led_off(self,relay_board, led_num): pass

	@abstractmethod
	def fan_on(self,relay_board, fan_num): pass

	@abstractmethod
	def fan_off(self,relay_board, fan_num): pass

	@abstractmethod
	def get_sampels(self, sensors): pass

	@abstractmethod
	def get_snapshot(self,camera): pass

class Rpi2b(Closet):





